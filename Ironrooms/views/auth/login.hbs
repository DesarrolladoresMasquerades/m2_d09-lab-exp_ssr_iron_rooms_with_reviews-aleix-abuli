<h2>Log in</h2>

<form action="/auth/login" method="POST">
   <label> Email
      <input type="email" name="email" placeholder="Email">
   </label>
   <label> Password
      <input type="password" name="password">
   </label>

   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
   <p style="color:red">{{errorMessage}}</p>
{{/if}}